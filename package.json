{
  "name": "mcp-gateway",
  "version": "0.1.0",
  "description": "Middleware for managing local MCP servers with high availability and control plane features.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "build": "tsc",
    "build:bin": "pkg . --out-path binaries",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "dist/index.js",
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "node_modules/**/*"
    ],
    "targets": [
      "node20-linux-x64",
      "node20-macos-x64",
      "node20-win-x64"
    ],
    "outputPath": "binaries"
  },
  "keywords": [
    "mcp",
    "gateway",
    "middleware",
    "ai",
    "agent"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "eventsource": "^4.1.0",
    "execa": "^9.5.2",
    "express": "^5.1.0",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.9.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}